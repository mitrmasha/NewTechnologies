<Window x:Class="WpfApp1.RedakZayvka"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Редактирование заявки" Height="450" Width="800"
        Background="White"
        FontFamily="Bahnschrift Light SemiCondensed">

    <Grid Margin="30" Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Редактирование заявки" FontSize="24" FontWeight="SemiBold" Foreground="#0C4882" Margin="0,0,0,20"/>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Background="White">
            <Grid Height="254" Background="White">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Код заявки" Grid.Row="0" Grid.Column="0" Margin="0,0,0,8" FontSize="16" FontWeight="SemiBold" Foreground="#0C4882"/>
                <TextBox x:Name="kodzayvki" Grid.Row="1" Grid.Column="0" Height="40" FontSize="14" Padding="10" BorderBrush="#0C4882" BorderThickness="1" Background="White" Foreground="#333333"/>

                <TextBlock Text="Дата" Grid.Row="2" Grid.Column="0" Margin="0,16,0,8" FontSize="16" FontWeight="SemiBold" Foreground="#0C4882"/>
                <DatePicker x:Name="datePick" Grid.Row="3" Grid.Column="0" Height="40" FontSize="14" Padding="10" BorderBrush="#0C4882" BorderThickness="1" Background="White"/>

                <TextBlock Text="Партнёр" Grid.Row="4" Grid.Column="0" Margin="0,16,0,8" FontSize="16" FontWeight="SemiBold" Foreground="#0C4882"/>
                <TextBox x:Name="parther" Grid.Row="5" Grid.Column="0" Height="40" FontSize="14" Padding="10" BorderBrush="#0C4882" BorderThickness="1" Background="White" Foreground="#333333"/>

                <TextBlock Text="Сумма заявки" Grid.Column="2" Margin="10,0,-10,8" FontSize="16" FontWeight="SemiBold" Foreground="#0C4882"/>
                <TextBox x:Name="summaik" Grid.Column="2" Height="40" FontSize="14" Padding="10" BorderBrush="#0C4882" BorderThickness="1" Margin="0,27,0,0" Background="White" Foreground="#333333" Grid.RowSpan="2"/>

                <DataGrid x:Name="SpisokProduk" AutoGenerateColumns="False" Grid.Row="2" Background="White" Grid.Column="2" Margin="0,38,0,10" Grid.RowSpan="4">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="№" Binding="{Binding ID}"/>
                        <DataGridTextColumn Header="Название продукции" Binding="{Binding Name_products}"/>
                        <DataGridTextColumn Header="Артикул" Binding="{Binding Article}"/>
                        <DataGridTemplateColumn Header="Действие" Width="80">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock><Hyperlink Click="Hyperlink_Click_1">Удалить</Hyperlink></TextBlock>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn Header="Действие" Width="80">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock><Hyperlink Click="Hyperlink_Click">Добавить</Hyperlink></TextBlock>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </ScrollViewer>

        <Button x:Name="nazad" Content="Назад" Grid.Row="2" HorizontalAlignment="Left" Margin="0,20,0,0" FontSize="18" FontWeight="SemiBold" Width="120" Height="40" Background="#0C4882" Foreground="White" BorderThickness="0" Click="nazad_Click"/>
        <Button x:Name="izmen" Content="Сохранить изменения" Grid.Row="2" HorizontalAlignment="Right" Margin="0,20,0,0" FontSize="18" FontWeight="SemiBold" Width="200" Height="40" Background="#0C4882" Foreground="White" BorderThickness="0" Click="izmen_Click"/>
    </Grid>
</Window>