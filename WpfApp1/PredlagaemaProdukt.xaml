<Window x:Class="WpfApp1.PredlagaemaProdukt" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:local="clr-namespace:WpfApp1" mc:Ignorable="d" Title="PredlagaemaProdukt" Height="450" Width="800" FontFamily="Bahnschrift Light SemiCondensed" Background="White">
    <Grid Background="#BBDCFA">
        <Grid.RowDefinitions>
            <RowDefinition Height="26*"/>
            <RowDefinition Height="299*"/>
            <RowDefinition Height="65*"/>
            <RowDefinition Height="44*"/>
        </Grid.RowDefinitions>
        <DataGrid x:Name="SpisokProduk" AutoGenerateColumns="False" Background="White" Margin="0,12,10,7" Grid.Row="1">
            <DataGrid.Columns>
                <DataGridTextColumn Header="№" Binding="{Binding ID}"/>
                <DataGridTextColumn Header="Название продукции" Binding="{Binding Name_products}"/>
                <DataGridTextColumn Header="Тип продукции" Binding="{Binding Type_products_.Type}"/>
                <DataGridTextColumn Header="Артикул" Binding="{Binding Article}"/>
                <DataGridTextColumn Header="Минимальная стоимость для партнёра" Binding="{Binding Minimum_cost_partner}"/>
            </DataGrid.Columns>
        </DataGrid>
        <Button x:Name="nazad" Content="Назад" HorizontalAlignment="Left" Margin="670,0,0,10" FontSize="18" FontWeight="SemiBold" Width="120" Height="40" Background="#0C4882" Foreground="White" BorderThickness="0" Click="nazad_Click" Grid.Row="2" VerticalAlignment="Bottom"/>
        <Button x:Name="raschet" Content="Рассчёт материала" HorizontalAlignment="Left" Margin="10,0,0,10" FontSize="18" FontWeight="SemiBold" Width="235" Height="40" Background="#0C4882" Foreground="White" BorderThickness="0" Click="raschet_Click" Grid.Row="2" VerticalAlignment="Bottom"/>
    </Grid>
</Window>