<Window x:Class="WpfApp1.Rachet" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:local="clr-namespace:WpfApp1" mc:Ignorable="d" Title="Rachet" Height="450" Width="800" FontFamily="Bahnschrift Light SemiCondensed">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Тип продукции" Grid.Row="0" Grid.Column="0" Margin="20,20,20,5" FontSize="16" FontWeight="SemiBold" Foreground="#0C4882"/>
        <ComboBox x:Name="TypeProduct" Grid.Row="1" Grid.Column="0" Margin="20,0,20,15" Height="35" FontSize="14" Background="White" BorderBrush="#0C4882" BorderThickness="1" Padding="6" Foreground="#333333" DisplayMemberPath="Type"/>

        <TextBlock Text="Тип материала" Grid.Row="0" Grid.Column="1" Margin="20,20,20,5" FontSize="16" FontWeight="SemiBold" Foreground="#0C4882"/>
        <ComboBox x:Name="TypeMaterial" Grid.Row="1" Grid.Column="1" Margin="20,0,20,15" Height="35" FontSize="14" Background="White" BorderBrush="#0C4882" BorderThickness="1" Padding="6" Foreground="#333333" DisplayMemberPath="Type"/>

        <TextBlock Text="Требуемое количество продукции" Grid.Row="2" Grid.Column="0" Margin="20,15,20,5" FontSize="16" FontWeight="SemiBold" Foreground="#0C4882"/>
        <TextBox x:Name="kolvoprodukt" Grid.Row="3" Grid.Column="0" Margin="20,0,20,15" Height="35" FontSize="14" Padding="10" BorderBrush="#0C4882" BorderThickness="1" Background="White" Foreground="#333333"/>

        <TextBlock Text="Количество продукции на складе" Grid.Row="2" Grid.Column="1" Margin="20,15,20,5" FontSize="16" FontWeight="SemiBold" Foreground="#0C4882"/>
        <TextBox x:Name="kolvonasklade" Grid.Row="3" Grid.Column="1" Margin="20,0,20,15" Height="35" FontSize="14" Padding="10" BorderBrush="#0C4882" BorderThickness="1" Background="White" Foreground="#333333"/>

        <TextBlock Text="Параметр продукции 1" Grid.Row="4" Grid.Column="0" Margin="20,15,20,5" FontSize="16" FontWeight="SemiBold" Foreground="#0C4882"/>
        <TextBox x:Name="prametr1" Grid.Row="5" Grid.Column="0" Margin="20,0,20,15" Height="35" FontSize="14" Padding="10" BorderBrush="#0C4882" BorderThickness="1" Background="White" Foreground="#333333"/>

        <TextBlock Text="Параметр продукции 2" Grid.Row="4" Grid.Column="1" Margin="20,15,20,5" FontSize="16" FontWeight="SemiBold" Foreground="#0C4882"/>
        <TextBox x:Name="prametr2" Grid.Row="5" Grid.Column="1" Margin="20,0,20,15" Height="35" FontSize="14" Padding="10" BorderBrush="#0C4882" BorderThickness="1" Background="White" Foreground="#333333"/>

        <TextBlock Text="Итог" Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="2" Margin="20,20,20,5" FontSize="16" FontWeight="SemiBold" Foreground="#0C4882" HorizontalAlignment="Center"/>
        <TextBox x:Name="Itog" Grid.Row="7" Grid.Column="0" Grid.ColumnSpan="2" Margin="150,0,150,20" Height="40" FontSize="14" Padding="10" BorderBrush="#0C4882" BorderThickness="1" Background="White" Foreground="#333333" TextAlignment="Center" FontWeight="Bold"/>

        <Button x:Name="ras" Content="Посчитать" Grid.Row="9" Grid.Column="0" HorizontalAlignment="Left" Margin="20,0,0,20" FontSize="18" FontWeight="SemiBold" Width="150" Height="40" Background="#0C4882" Foreground="White" BorderThickness="0" Click="ras_Click" VerticalAlignment="Bottom"/>
        <Button x:Name="nazad" Content="Назад" Grid.Row="9" Grid.Column="1" HorizontalAlignment="Right" Margin="0,0,20,20" FontSize="18" FontWeight="SemiBold" Width="150" Height="40" Background="#0C4882" Foreground="White" BorderThickness="0" Click="nazad_Click" VerticalAlignment="Bottom"/>
    </Grid>
</Window>