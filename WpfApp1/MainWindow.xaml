<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Просмотр заявок парнёра" Height="450" Width="800"
        FontFamily="Bahnschrift Light SemiCondensed"
        Icon="/НовыеТехнологии.ico">
    <Grid Background="#FFFFFF">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="148*"/>
            <ColumnDefinition Width="9*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="12*"/>
            <RowDefinition Height="365*"/>
            <RowDefinition Height="57*"/>
        </Grid.RowDefinitions>
        <ListView x:Name="listP" SelectedValuePath="id" Height="365" Width="740" HorizontalAlignment="Center" VerticalAlignment="Center" Background="#BBDCFA" Grid.Row="1" Grid.Column="1">>
            <ListView.View>
                <GridView>
                    <GridViewColumn/>
                </GridView>
            </ListView.View>
        </ListView>
        <Button x:Name="addPartnerBtn" Content="Добавить заявку" HorizontalAlignment="Left" Margin="19,13,0,0" VerticalAlignment="Top"  Background="#0C4882" Width="205" FontFamily="Bahnschrift Light SemiCondensed" Foreground="White" Grid.Row="2" Grid.Column="1" Click="addPartnerBtn_Click"/>
        <Button x:Name="redactPartnerBtn" Content="Редактировать заявку" HorizontalAlignment="Left" Margin="283,13,0,0" VerticalAlignment="Top" Background="#0C4882" Width="204" FontFamily="Bahnschrift Light SemiCondensed" Foreground="White" Grid.Row="2" Grid.Column="1" Click="redactPartnerBtn_Click"/>
        <Button x:Name="predlag" Content="Предлагаема продукция" HorizontalAlignment="Left" Margin="536,13,0,0" VerticalAlignment="Top" Background="#0C4882" Width="204" FontFamily="Bahnschrift Light SemiCondensed" Foreground="White" Grid.Row="2" Grid.Column="1" Click="predlag_Click"/>
    </Grid>
</Window>